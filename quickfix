MESSAGE="$@"
BRANCH="fix/`echo "$MESSAGE" | sed -e 's/ /-/g' | cut -c1-15 | awk '{print tolower($0)}'`"

echo "Message: $MESSAGE"
echo "Branch: $BRANCH"

read -p "Does this look good? [y/N] " -n 1 -r
echo    
if [[ ! $REPLY =~ ^[Yy]$ ]]
then
    exit 1
fi

git checkout -b "$BRANCH" master
git commit -am "$MESSAGE"
git push origin HEAD
